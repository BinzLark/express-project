extends ../layouts/app
block content
    h1 
        span User
        a(href="users/create" class="btn btn-primary ml-3") New
    .d-flex.justify-content-end
        form.w-25.d-flex(action="/users" method="method")
            input(type="text" class="form-control" name="search" value=search)
            input(type="submit", class="btn btn-primary ml-3" value="Search")
    table.table.table-hover.table-striped.mt-3(style="font-size:15px")
        thead
            tr
                th Avatar
                th Name
                th Phone
                th Action
        tbody
        each user in users
            tr
                td
                    img.rounded-circle.avatar(src=user.avatar||'https://via.placeholder.com/32' width="32" height="32")
                td
                    span(style="text-transform:capitalize")= user.name 
                td= user.phone
                td
                    a(href="/users/"+user.id style="text-decoration:none") View